extends layout

block content

  h1 Welcome, #{user.displayName}

  //div.modal(class='fade' id='regModal' role='dialog' )
    div.modal-dialog
      div.modal-content
        div.modal-header
          button.close(type='button' data-dismiss='modal')
            | &times
          form(action="/reg" method="post")
            h1 Регистрация
            input(type="hidden" name="_csrf" value=`csrf()`)
            .form-group
              label(for="reg-email") Почта
              input.form-control(type="email" id="reg-email" name="reg-email" placeholder="my@mail.com" required autofocus)
            .form-group
              label(for="reg-password") Пароль
              input.form-control(type="password" id="reg-password" name="reg-password" required)
          button.btn.btn-lg.btn-primary.btn-block(type="submit") Создать учетку

  //div.modal(class='fade' id='loginModal' role='dialog' )
    div.modal-dialog
      div.modal-content
        div.modal-header
          button.close(type='button' data-dismiss='modal')
            | &times
          form(action="/login" method="post")
            h1 Войти в систему
            input(type="hidden" name="_csrf" value=`csrf()`)
            .form-group
              label(for="login-email") Почта
              input.form-control(type="email" id="login-email" name="login-email" placeholder="my@mail.com" required autofocus)
            .form-group
              label(for="login-password") Пароль
              input.form-control(type="password" id="login-password" name="login-password" required)
            button.btn.btn-lg.btn-primary.btn-block(type="submit") Войти в систему

  //nav(class='navbar navbar-expand-lg navbar-dark bg-dark' role="header")
    div.container-fluid
      //div.navbar-header
        a(class='navbar-brand' href='#')
          | WarMap
      //div(class='collapse navbar-collapse' id='navbarColor01')
      ul(class='navbar-nav')
        li(class='nav-item active')
          a(class='nav-link' data-toggle='tab' href='#map')
            | Карта
        li(class='nav-item')
          a(class='nav-link' data-toggle='tab' href='#mapdata')
            | Данные
      //ul(class='nav navbar-nav navbar-right')
        li
          a(data-toggle='modal' data-target='#regModal' href='#regModal')
            span(class='glyphicon glyphicon-user' data-toggle='modal' data-target='#regModal')
            |  Регистрация
        li
          a(data-toggle='modal' data-target='#loginModal' href='#loginModal')
            span(class='glyphicon glyphicon-log-in' data-toggle='modal' data-target='#loginModal')
            |  Вход

  div.content(role="content" id='content' dragable='true')
    //canvas(style='border: 1px solid grey;' id='mycanvas')

    //- div(class="form-group row")
    //-   div(class="col")
    //-     div.timeline-container(id="timelineContainer")
    //-       div(class="timeline-nav nav-past" id="navPast")
    //-         span(class='mdi mdi-arrow-left')
    //-       div(id="timelineWrapper")
    //-         div(id="timeline")
    //-           ol(id ="ticks")
    //-           ol(id="eventList")
    //-       div(class="timeline-nav nav-future" id="navFuture")
    //-         span(class='mdi mdi-arrow-right')
    //-       //div(id="eventDetailContainer" class="event-detail-container")
    //-           div.selected-event
    //-             div.event-title
    //-             //div.event-date-range
    //-               div.event-start-date
    //-               div.event-separator
    //-                 | &nbsp;-&nbsp;
    //-               div.event-end-date
    //-             //div.event-notes

    input(id='fileImport' accept='application/kml' type='file' style='display:none;')
    div.map(class='fill panel panel-default' id='map' role='map')
    div(id='eventPanel' class='eventPanel')
      div(class="card-body")
        div.form-group(class='row')
          div(id='eventList' class='eventList')

    //div(class='card border-secondary mb-3' id='panel-info')
      div(class="card-header")
        | Объект
        div(class="card-counter" id="objectCounter")
        div(class="btn-super-nav-group btn-super-nav-group-object")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" id="btnPrevObject" class="btn btn-secondary mdi mdi-chevron-left" title="Предыдущий объект")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" id="btnNextObject" class="btn btn-secondary mdi mdi-chevron-right" title="Следующий объект")
        div(class="btn-super-group")
          //div(class="btn-group btn-group-sm" role="group")
            button(type="button" id="btnChangeObject" class="btn btn-secondary mdi mdi-check btn-apply" title="Изменить объект")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" id="btnDataObject" class="btn btn-secondary mdi mdi-table-large btn-data" title="Привязать данные")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" id="btnDeleteObject" class="btn btn-secondary mdi mdi-delete-variant btn-delete" title="Удалить объект")
      div(class="card-body")
        div.form-group(class='row')
          div(class='col-sm-8')
            input.form-control(id='objectName' type="text" placeholder="Имя объекта")
          div(class='col-sm-4')
            select.form-control(id="objectCountry")
              option(selected value='russia')
                | Россия
              option(value='germany')
                | Германия
        //div.form-group(class="row")
          div(class='col')
            label(for='coords')
              | Доп. информация
            textarea.form-control(rows='4', id='objectInnerInfo')
    //div(class='card border-secondary mb-3' id='panel-data')
      div(class='card-header')
        | Данные
        div(class="card-counter" id="dataCounter")
        div(class="btn-super-group")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" id="btnChangeData" class="btn btn-secondary mdi mdi-check btn-apply" title="Сохранить данные")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" id="btnDeleteData" class="btn btn-secondary mdi mdi-delete-variant btn-delete" title="Удалить данные")
      div(class='card-body')
        div(class='form-group row')
          div(class='col')
            input.form-control(id='dataHeader' type="text" placeholder="Названия колонок через ;")
        div(class='form-group row')
          div(class='col')
            div(class='dataTable' id='dataTable')
    //div(class='card border-secondary mb-3' id='panel-date')
      div(class="card-header")
        | Событие
        div(class="card-counter" id="eventCounter")
        div(class="btn-super-nav-group")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" class="btn btn-secondary mdi mdi-skip-previous" title="Предыдущее событие")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" class="btn btn-secondary mdi mdi-play" title="Воспроизвести")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" class="btn btn-secondary mdi mdi-skip-next" title="Следующее событие")
        div(class="btn-super-group")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" class="btn btn-secondary mdi mdi-plus btn-add" title="Добавить новую дату")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" class="btn btn-secondary mdi mdi-check btn-apply" title="Изменить текущую дату")
          div(class="btn-group btn-group-sm" role="group")
            button(type="button" class="btn btn-secondary mdi mdi-delete-variant btn-delete" title="Удалить текущую дату")
      div(class="card-body")
        div(class="form-group row")
          div(class='col-sm-8')
            input.form-control(id='dateCaption' type="text" placeholder="Название события")
          div(class="col-sm-4")
            input.form-control(id='dateValue' type="date" style="display: none" onBlur="CheckDate(this, dateValuePlaceHolder)")
            input.form-control(id="dateValuePlaceHolder" type="text" placeholder="Дата события" onClick="ChangeVisible(dateValue, this)")
